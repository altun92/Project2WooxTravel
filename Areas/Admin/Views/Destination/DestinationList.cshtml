@model List<Project2WooxTravel.Entities.Destination>
@{
    ViewBag.Title = "DestinationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Destinasyon İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <a href="/Admin/Destination/CreateDestination" class="btn btn-primary">Yeni Destinasyon Girişi</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">TUR ADI</th>
                                    <th scope="col">ÜLKE</th>
                                    <th scope="col">ŞEHİR</th>
                                    <th scope="col">GÜN/GECE</th>
                                    <th scope="col">FİYAT</th>
                                    <th scope="col">AÇIKLAMA</th>
                                    <th scope="col">İŞLEMLER</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img aligin="middle" src="@item.ImageUrl" width="100px" height="auto" /></td>
                                        <td>@item.Title</td>
                                        <td>@item.Country</td>
                                        <td>@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Price TL</td>
                                        <td>@item.Description.Substring(0, 50)</td>
                                        <td>
                                            <a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger">Sil</a>
                                            <a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-success">Güncelle</a>
                                            <a href="/Default/TourDetail/@item.DestinationId" target="_blank" class="btn btn-primary">Sitede Gör</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

