@model Project2WooxTravel.Entities.Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Profil Bilgisi ve Düzenleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Adınız</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <br />

                            <label>Soyadınız</label>
                            @Html.TextBoxFor(x => x.SurName, new { @class = "form-control" })
                            <br />

                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />

                            <label>Kullanıcı Adınız</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            <br />

                            <label>Parolanız</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-primary">Bilgileri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

