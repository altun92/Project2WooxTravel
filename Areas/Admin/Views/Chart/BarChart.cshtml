﻿@using Newtonsoft.Json;
@model List<Project2WooxTravel.Entities.Destination>
@{
    ViewBag.Title = "BarChart";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-md-9">
                <div class="card text-center" style="padding: 20px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
                    <div class="card-header">
                        <h3 style="color:darkred; font-size: 1.5rem;">Turlara Ait Fiyat Grafiği</h3>
                    </div>
                    <div class="card-body">
                        <div>
                            <canvas id="chartdestination" width="400" height="200"></canvas>
                        </div>
                        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                        <script>
                    var ctx = document.getElementById('chartdestination').getContext('2d');
                    var destinationChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: @Html.Raw(JsonConvert.SerializeObject(Model.Select(s => s.Title).ToList())),
                            datasets: [{
                                label: 'Tur Fiyat Grafiği',
                                data: @Html.Raw(JsonConvert.SerializeObject(Model.Select(s => s.Price).ToList())),
                                backgroundColor: '#36A2EB',
                                borderColor: 'rgba(75, 192, 192, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                        </script>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>