@model List<Project2WooxTravel.Entities.Message>
@{
    ViewBag.Title = "Sendbox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Giden Mesaj Sayfası</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">ALICI</th>
                                    <th scope="col">KONU</th>
                                    <th scope="col">TARİH</th>
                                    <th scope="col">DURUM</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ReceiverMail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToShortDateString()</td>
                                        <td>@item.IsRead</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Message/SendMessage" class="btn btn-primary">Yeni Mesaj Gönderin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openMessageModal(sender, subject, date, message) {
        document.getElementById("modalSender").innerText = sender;
        document.getElementById("modalSubject").innerText = subject;
        document.getElementById("modalDate").innerText = date;
        document.getElementById("modalContent").innerText = message;

        $('#messageModal').modal('show');
    }

    document.getElementById("closeModalButton").addEventListener("click", function () {
        $('#messageModal').modal('hide');
    });


    // Modal kapatma işlemi
    document.querySelector('[data-dismiss="modal"]').addEventListener("click", function () {
        $('#messageModal').modal('hide');
    });

</script>
